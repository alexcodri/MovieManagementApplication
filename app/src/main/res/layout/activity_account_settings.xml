<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".UserAccessManagement.AccountSettingsActivity">

    <Button
        android:id="@+id/btn_change_password"
        android:text="@string/change_your_password"
        android:background="@color/colorBlack"
        android:textColor="@color/colorGold"
        android:textSize="@dimen/mTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.278"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_change_password"
        app:layout_constraintVertical_bias="0.119"
        tools:layout_editor_absoluteX="0dp"
        android:background="@color/colorBlack"
        android:textColor="@color/colorGold"
        android:id="@+id/delete_account"
        android:textSize="@dimen/mTitle"
        android:text="@string/delete_your_account"
        />

</androidx.constraintlayout.widget.ConstraintLayout>