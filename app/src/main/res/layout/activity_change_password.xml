<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserAccessManagement.ChangePassword"
    android:background="@color/colorBlack">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        android:textColorHint="@color/colorGold"
        android:inputType="textPassword"
        android:textColor="@color/colorGold"
        android:hint="@string/please_insert_your_new_password"
        android:textSize="@dimen/mTitle_padding"
        android:textAlignment="center"
        android:id="@+id/et_change_password"/>

    <Button
        android:id="@+id/btn_reset_password"
        android:layout_width="120dp"
        android:layout_height="43dp"
        android:text="@string/reset_now"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_change_password"
        app:layout_constraintVertical_bias="0.128" />
</androidx.constraintlayout.widget.ConstraintLayout>